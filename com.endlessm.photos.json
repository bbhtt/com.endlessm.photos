{
    "app-id": "com.endlessm.photos",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "eos-photos",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--metadata=X-DConf=migrate-path=/com/endlessm/photos/"
     ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/doc",
        "/share/man",
        "/share/gir-1.0",
        "*.la"
    ],
    "modules": [
        "shared-modules/clutter/clutter.json",
        "shared-modules/dbus-glib/dbus-glib.json",
        {
            "name": "lapack",
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_Fortran_COMPILER=gfortran",
                "-DLAPACKE=ON",
                "-DCBLAS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Reference-LAPACK/lapack/archive/refs/tags/v3.10.1.tar.gz",
                    "sha512": "0500bbbb48483208c0a35b74972ff0059c389da6032824a2079637266a99fa980882eedf7f1fc490219ee4ff27812ac8c6afe118e25f40a9c2387e7b997762fb"
                }
            ],
            "cleanup": [ "/lib/cmake" ]
        },
        {
            "name": "qhull",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.qhull.org/download/qhull-2020-src-8.0.2.tgz",
                    "sha256": "b5c2d7eb833278881b952c8a52d20179eab87766b00b865000469a45c1838b7e"
                }
            ]
        },
        "python-requirements.json",
        {
            "name": "eos-metrics",
            "config-opts": [
                "--disable-gtk-doc",
                "--disable-gir-doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/endlessm/eos-metrics/archive/refs/tags/Release_4.0.6.tar.gz",
                    "sha256": "2652236d39072270c24a69586236ee0cce8a5ad2c9de83dc25955a29960cf704"
                }
            ]
        },
        {
            "name": "eos-sdk",
            "build-options": {
                "env": {
                    "PYTHON": "python3"
                },
                "config-opts": [
                    "--disable-gtk-doc",
                    "--disable-gir-doc",
                    "--disable-js-doc",
                    "--disable-webhelper"
                ]
            },
            "cleanup": [
                "/bin",
                "/libexec",
                "/share/gjs-1.0"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/endlessm/eos-sdk/archive/refs/tags/Release_3.3.20.tar.gz",
                    "sha256": "a78a585656395b375bee09d9b328f2a07312aad87ad9a15dd0e992d426a1edff"
                }
            ]
        },
        {
            "name": "eos-photos",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/endlessm/eos-photos/archive/refs/tags/1.0.2.tar.gz",
                    "sha256": "17b021ca9f7a764c6e20f1026661a7357b39d8cefb7a76470aeba26852788123"
                },
                {
                    "type":"patch",
                    "path":"0001-explicitly-require-GTK-3.patch"
                },
                {
                    "type": "file",
                    "path": "com.endlessm.photos-128.png"
                }
            ],
            "post-install": [
                "install -Dm644 com.endlessm.photos-128.png  /app/share/icons/hicolor/128x128/apps/com.endlessm.photos.png"
            ]
        }
    ]
}
